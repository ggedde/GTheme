{
    "name": "gtheme",
    "version": "1.0.0",
    "description": "WordPress Website and Theme",
    "config": {
        "assets_dir": "public/wp-content/themes/gtheme/assets"
    },
    "scripts": {
        "watch": "npm run watch-js | npm run watch-css",
        "watch-css": "sass $npm_package_config_assets_dir/css/main.scss:$npm_package_config_assets_dir/dist/main.min.css $npm_package_config_assets_dir/css/bootstrap.scss:$npm_package_config_assets_dir/dist/bootstrap.min.css --watch",
        "watch-prefix": "node_modules/.bin/postcss $npm_package_config_assets_dir/dist/main.min.css --use=autoprefixer --output=$npm_package_config_assets_dir/dist/main.min.css --watch",
        "watch-js": "node_modules/.bin/nodemon -e js --ignore '*.min.js' --watch $npm_package_config_assets_dir/js -x 'npm run build-js'",
        "build": "npm run build-css | npm run build-js | npm run prefix",
        "build-css": "sass $npm_package_config_assets_dir/css/main.scss $npm_package_config_assets_dir/dist/main.min.css",
        "build-js": "node_modules/.bin/terser node_modules/mdbootstrap/js/popper.min.js node_modules/mdbootstrap/js/bootstrap.min.js node_modules/mdbootstrap/js/mdb.min.js $npm_package_config_assets_dir/js/inc/*.js $npm_package_config_assets_dir/js/main.js -o $npm_package_config_assets_dir/dist/main.min.js --source-map filename=$npm_package_config_assets_dir/dist/main.min.js.map",
        "prefix": "node_modules/.bin/postcss $npm_package_config_assets_dir/dist/main.min.css --use=autoprefixer --output=$npm_package_config_assets_dir/dist/main.min.css",
        "sync": "node_modules/.bin/browser-sync start --config local-config.js",
        "dev": "npm run watch | npm run sync"
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "browser-sync": "^2.26.7",
        "nodemon": "^1.19.3",
        "postcss-cli": "^6.1.3",
        "sass": "^1.23.0",
        "terser": "^4.3.9",
        "uglify-js": "~3.6.0"
    },
    "author": "GG",
    "license": "ISC",
    "dependencies": {
        "mdbootstrap": "^4.8.11"
    }
}
